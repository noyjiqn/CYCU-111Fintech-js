//====== Practice 1======
//for 迴圈語法calculate 1 + 2 + 3 + 4 + 5
n = 5;
s = 0;
for(i = 1; i <= n; i++){
  s=s+i
  }
document.write(s + "<br>")
//---------------------------------
//====== Practice 2 ======
//calculate 1 * 2 * 3 * 4 * 5
n = 5;
s = 1;
for(i = 1; i <= n; i++){
  s=s*i
 }
document.write(s + "<br>")

//---------------------------------
n = 5;
s = 1;
for(i = 1; i <= n; i++){
  s=s*i
 }
document.write("1+2+...*"+n+"="+s + "<br>")

//---------------------------------
s = 1;
t = "";
for(i = 1; i <= n; i++){
  s=s*i
  t= t + i
  if(i < 5){
    t = t + " * "
  }
}
document.write(t + " = " + s+ "<br>")

