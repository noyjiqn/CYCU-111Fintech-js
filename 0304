//====== Practice 4 ======
//calculate 陣列  "阻止作用域"。const
 const cars = [];
cars[0]= "Saab";
cars[1]= "Volvo";
cars[2]= "BMW";
document.write(cars+"<br>")

//calculate 陣列 Array push( )
x=[]
for(i=1;i<=10;i++){
   x.push(i)
  }
  document.write(x+"<br>")
//--------------添加到陣列的末尾-------------------
fruits = ["Banana", "Orange", "Apple", "Mango"];
fruits.push("Kiwi", "Lemon");
 document.write(fruits+"<br>")
 document.write(fruits[2]+"<br>")
//-------------顯示基數--------------------
z=[];
n=100
for(i=0;i<=n;i++){
  if(i%2==1){
    z.push(i)
    }
  }
document.write(z)
//------------------------------------------------
n=100
for(i=1;i<=n;i++){
  if(i%2==1){
    document.write(i+",")
  }
}
